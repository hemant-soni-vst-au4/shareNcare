<div class="section-bg" style="background-image: url(img/login.jpg); width: 100%;
       height: 783px;"></div>
   <div class="section">
     {{#if alert}}
      <div class="alert alert-danger alert-dismissible" id="alert" style="margin-top: 16px;">
        <a href="/login" class="close" aria-label="close">&times;</a>
        <strong>{{alert}}!</strong> UserName or Password Incorrect 
    </div>
    {{/if}}
   
    <div class="container" class="form-group" id="login">
      
     <form class="form-signin" action="/authentication" method="POST">
    
    <h1 style="color: white;">Login</h1><br>
    <label for="inputUser" class="sr-only">Username</label>
     <input type="text" id="username" class="form-control" placeholder="username" name="username" required="true"><br>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="password" class="form-control" placeholder="Password" name="password" required="true"><br><br> 
     <div class="checkbox mb-3" style="color: white;">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
   
     <button type="submit" id="btn" class="btn btn-lg btn-success btn-sm"><b>Login</b></button><br><br>
           <a href="/signup" id="frpd" style="color: white;">Forgot Password ?</a><hr>
            <a href="/signup" id="newacc" style="color: white;">Create a new account</a>

  </form>
  
    </div>
    </div>
 
</div>
<script>
  setTimeout(function(){
  $('#alert').remove();
}, 2000);
</script>